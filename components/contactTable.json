{
  "type": "contactTable",
  "title": "Контактное лицо",
  "uiType": "unitable",
  "visible": true,
  "readonly": true,
  "required": true,
  "collapse": true,
  "onlyModalEditable": true,
  "uiConfig": {
    "actions": [
      {
        "action": "add",
        "type": "top-action",
        "title": "Добавить контактное лицо"
      },
      {
        "action": "edit",
        "type": "row-action"
      },
      {
        "action": "remove",
        "type": "row-action"
      }
    ],
    "datasource": {
      "type": "model",
      "property": "items"
    },
    "indexColumn": {
      "enabled": false
    },
    "columns": [
      {
        "field": "contactLastName",
        "header": "Фамилия",
        "type": "input",
        "readonly": false,
        "required": true,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "header": "Имя",
        "field": "contactFirstName",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "input",
        "required": true
      },
      {
        "header": "Отчество",
        "field": "contactSecondName",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "input",
        "required": false
      },
      {
        "field": "contactPosition",
        "header": "Должность",
        "type": "input",
        "readonly": false,
        "required": true,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "field": "contactPhone",
        "header": "Телефон",
        "type": "inputPhone",
        "readonly": false,
        "requireExp": "component?.contactMain === true",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "field": "contactSmsNotifyEnabled",
        "header": "Номер мобильного телефона для смс-информирования",
        "type": "switch",
        "readonly": false,
        "required": true,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "field": "contactMain",
        "header": "Основной",
        "type": "switchUnique",
        "readonly": false,
        "requireExp": "component?.required",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "errorMessage": "Одно контактное лицо должно быть основным."
      },
      {
        "field": "contactEmail",
        "header": "Электронная почта",
        "type": "inputEmail",
        "readonly": false,
        "requireExp": "component?.contactMain === true",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      }
    ]
  }
}
