{
  "type": "uni",
  "uiType": "uniform",
  "title": "Параметры проверки",
  "keyFormat": "accountingParams~${orderId}",
  "visible": true,
  "collapse": false,
  "readonly": false,
  "gutter": [ 16, 16 ],
  "blocks": [
    {
      "id": "accountingParamsBlock1",
      "uiType": "wrapper",
      "visible": true,
      "readonly": false,
      "collapse": false,
      "fields": [
        {
          "col": 24,
          "pos": 1,
          "type": "inputDate",
          "name": "operDate",
          "label": "Операционный день для постановки на учет",
          "placeholder": "Выберите дату",
          "visible": true,
          "readonly": false,
          "required": true,
          "disabledExp": "['UserTaskStatementApprove', 'UserTaskCorrectionPrepare', 'UserTaskCorrectionApprove'].findLastIndex(configName => model?.bgOrder?.taskDefinitionKey?.includes(configName)) !== -1",
          "responsive": { "xs": 24, "sm": 24, "md": 12, "lg": 12, "xl": 6, "xxl": 6 }
        },
        {
          "col": 24,
          "pos": 5,
          "name": "requirePublication",
          "type": "switch",
          "label": "Требуется публикация БГ ?",
          "visibleExp": "!((['UserTaskStatementPrepare', 'UserTaskStatementApprove'].findLastIndex(configName => model?.bgOrder?.taskDefinitionKey?.includes(configName)) !== -1 && ['fns', 'fts'].findLastIndex(name => model?.bgOrder?.productInfo?.law?.includes(name)) !== -1) || (['UserTaskCorrectionPrepare', 'UserTaskCorrectionApprove'].findLastIndex(configName => model?.bgOrder?.taskDefinitionKey?.includes(configName)) !== -1))",
          "readonly": false,
          "disabledExp": "!(model?.bgOrder?.productInfo?.law === '44' || model?.bgOrder?.productInfo?.law === '223')",
          "responsive": { "lg": 24, "md": 24, "sm": 24, "xl": 24, "xs": 24, "xxl": 24}
        }
      ]
    },
    {
      "id": "accountingParamsBlock2",
      "uiType": "wrapper",
      "visibleExp": "component?.requirePublication === true",
      "readonly": false,
      "collapse": false,
      "fields": [
        {
          "col": 24,
          "pos": 1,
          "name": "autoPublication",
          "type": "switch",
          "label": "Публикация БГ осуществляется автоматически ?",
          "visibleExp": "model?.bgOrder?.productInfo?.law === '44' && model?.bgOrder?.productInfo?.auctionType === 'public' && ['bg-cpa-okvs-correction.UserTaskCorrectionApprove', 'bg-cpa-okvs-correction.UserTaskCorrectionPrepare'].findLastIndex(configName => model?.bgOrder?.taskDefinitionKey?.includes(configName)) === -1",
          "disabledExp": "!(model?.bgOrder?.productInfo?.law === '44' && model?.bgOrder?.productInfo?.auctionType === 'public')",
          "readonly": false,
          "responsive": { "lg": 24, "md": 24, "sm": 24, "xl": 24, "xs": 24, "xxl": 24 }
        }
      ]
    }
  ]
}
