{
  "type": "marketStatistics",
  "title": "Данные маркетплейсов",
  "uiType": "unitable",
  "visible": true,
  "readonly": true,
  "collapse": true,
  "errorsStrategy": "fail-safe",
  "dependencies": ["marketStatistics.monthlyStatistics"],
  "uiConfig": {
    "datasource": {
      "type": "component",
      "property": "monthlyStatistics"
    },
    "indexColumn": {
      "enabled": false
    },
    "columns": [
      {
        "header": "Период",
        "field": "period",
        "type": "input",
        "required": true,
        "readonly": true,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "header": "Продажи Wildberries (без вычета комиссии), руб.",
        "field": "wbRevenue",
        "type": "inputMoney",
        "required": true,
        "readonly": false,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "header": "Продажи OZON (только при наличии API), руб.",
        "field": "ozonRevenue",
        "type": "inputMoney",
        "required": true,
        "readonly": true,
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "header": "Продажи Wildberries + OZON, руб.",
        "field": "totalRevenue",
        "type": "inputMoney",
        "required": true,
        "readonly": true,
        "valueExp": "(model?.marketStatistics?.monthlyStatistics?.[index]?.ozonRevenue || 0) + (model?.marketStatistics?.monthlyStatistics?.[index]?.wbRevenue || 0)",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        }
      },
      {
        "header": "Остатки на конец периода, в шт.",
        "field": "endPeriodBalanceCount",
        "type": "inputNumber",
        "required": false,
        "readonly": false,
        "sorting": {
          "enabled": false
        }
      },
      {
        "header": "Остатки на конец периода, в руб.",
        "field": "endPeriodBalanceSum",
        "type": "inputMoney",
        "required": false,
        "readonly": false,
        "sorting": {
          "enabled": false
        }
      }
    ]
  }
}