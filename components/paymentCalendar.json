{
  "type": "paymentCalendar",
  "title": "Платежный календарь",
  "readonly": true,
  "visible": true,
  "collapse": true,
  "uiType": "unitable",
  "uiConfig": {
    "actions": [
      {
        "action": "add",
        "type": "top-action",
        "title": "Добавить"
      },
      {
        "action": "remove",
        "type": "top-action",
        "title": "Удалить"
      },
      {
        "action": "calculate",
        "type": "top-action",
        "title": "Рассчитать"
      }
    ],
    "datasource": {
      "type": "model",
      "property": "table"
    },
    "indexColumn": {
      "enabled": false
    },
    "columns": [
      {
        "header": "Номер платежа",
        "field": "paymentNumber",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Дата возврата денежных средств",
        "field": "dateRefund",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "date",
        "format": "DD.MM.YYYY",
        "required": false
      },
      {
        "header": "Сумма взноса",
        "field": "contributionAmount",
        "sorting": {
          "enabled": false
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Сумма процентов за пользование Кредитом",
        "field": "amountInterest",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Проценты за пользование кредитом",
        "field": "interest",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Комиссия за ведение ссудного счета",
        "field": "commissionManagement",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Сумма основного долга по Кредиту",
        "field": "amountDebt",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      },
      {
        "header": "Остаток задолженности по Договору",
        "field": "unpaidBalance",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": true,
        "type": "text",
        "required": false
      }
    ],
    "footer": [
      [
        { "value": "Итого:" },
        { "colspan": 2 },
        { "valueProperty": "totalInterest" },
        { "valueProperty": "totalAmountInterest" },
        { "valueProperty": "totalCommissionManagement" },
        { "valueProperty": "totalAmountDebt" }
      ],
      [
        { "colspan": 6 },
        { "value": "ВСЕГО:" },
        { "valueProperty": "total" }
      ],
      [
        { "colspan": 6 },
        { "value": "Сальдо на начало:" },
        { "valueProperty": "summa" }
      ]
    ]
  }
}