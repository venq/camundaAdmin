{
  "type": "contactTable",
  "title": "Платежный календарь",
  "readonly": false,
  "visible": true,
  "collapse": true,
  "uiType": "unitable",
  "uiConfig": {
    "actions": [
      {
        "action": "add",
        "type": "top-action",
        "title": "Добавить контактное лицо"
      },
      {
        "action": "edit",
        "type": "row-action",
        "title": "Редактировать контактное лицо"
      },
      {
        "action": "remove",
        "type": "row-action",
        "title": "Удалить контактное лицо"
      }
    ],
    "datasource": {
      "type": "model",
      "property": "items"
    },
    "indexColumn": {
      "enabled": false
    },
    "columns": [
      {
        "header": "ФИО",
        "field": "contactFio",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "text",
        "required": true
      },
      {
        "header": "Должность",
        "field": "contactPosition",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "text",
        "required": true
      },
      {
        "header": "Телефон",
        "field": "contactPhone",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "inputPhone",
        "required": false,
        "requireExp": "component?.contactMain === true"
      },
      {
        "header": "Номер мобильного телефона для смс-информирования",
        "field": "contactSmsNotifyEnabled",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "switch",
        "required": true
      },
      {
        "header": "Основной",
        "field": "contactMain",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "switchUnique",
        "required": true
      },
      {
        "header": "Электронная почта",
        "field": "contactEmail",
        "sorting": {
          "enabled": true,
          "default": "ASC"
        },
        "readonly": false,
        "type": "inputEmail",
        "required": false,
        "requireExp": "component?.contactMain === true"
      }
    ]
  }
}